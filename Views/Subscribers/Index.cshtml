@model IEnumerable<PhoneBook.Models.Subscriber>
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <h1>Index</h1>
</div>
<div class="row">
    <div class="col-sm-6 offset-6 mb-3">
        <div style="float:right">
            <a class="btn btn-primary " asp-controller="Subscribers" asp-action="Create">Create</a>
        </div>
        
    </div>
</div>
@if(Model.Count() > 0)
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>First Name </th>
                <th>Last Name </th>
                <th>Phone Number</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var subscriber in Model)
            {
                <tr>
                    <td> @subscriber.FirstName</td>
                    <td> @subscriber.LastName</td>
                    <td> @subscriber.PhoneNumber</td>
                    <td>
                        <a class="btn btn-primary" asp-controller="Subscribers" asp-action="Edit" asp-route-Id="@subscriber.Id">Edit</a>
                    </td>

                    <td>
                        <a class="btn btn-danger" asp-controller="Subscribers" asp-action="Delete" asp-route-Id="@subscriber.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}



