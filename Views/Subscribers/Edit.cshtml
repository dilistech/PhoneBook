@model PhoneBook.Models.Subscriber
@{
    ViewData["Title"] = "Edit";
}

<h1>Create</h1>

<form asp-action="Edit" method="post">
    <input asp-for="@Model.Id" hidden />

    <div class="form-group mb-2">
        <label asp-for="@Model.FirstName"></label>
        <input asp-for="@Model.FirstName" type="text" class="form-control" placeholder="FirstName">
    </div>
    <div class="form-group mb-2">
        <label asp-for="@Model.LastName">Last Name</label>
        <input asp-for="@Model.LastName" type="text" class="form-control" placeholder="Last Name">
    </div>
    <div class="form-group mb-2">
        <label asp-for="@Model.PhoneNumber"></label>
        <input asp-for="@Model.PhoneNumber" type="text" class="form-control" placeholder="PhoneNumber">
    </div>
    <div class="form-group mt-3 text-center">
        <input type="submit" class="btn btn-primary" value="Edit" />
    </div>

</form>
